<div id="topnavbar_wrapper" class="row border-bottom top-navbar-wrapper <%= class_for('body_navbar') != '' ? 'width96' : 'width88' %>">
  <nav class="navbar navbar-static-top" role="navigation" style="margin-bottom: 0">
    <div class="navbar-header">
      <a class="navbar-minimalize minimalize-styl-2 btn btn-primary" id='minimize_navbar_btn'>
        <i class="fa fa-bars"></i>
      </a>
      <form class="navbar-form-custom">
        <div class="form-group search-input">
          <%= image_tag "close_button.svg", id: "search_empty_button" %>
          <input type="text" placeholder="Поиск..." class="form-control" autocomplete="off" name="search" id="search"/>
        </div>
      </form>
      <div id="search_box" class="search-box"></div>
    </div>
    <div class="navbar-map-tools-wrapper">
      <%= yield(:scaling_buttons) %>
      <%= yield(:head_buttons) %>
      <h2 class="map-title"><%= yield(:title) %></h2>
      <div class="head-controll-buttons">
        <%= yield(:action_wrapper) %>
      </div>
    </div>
  </nav>
</div>
