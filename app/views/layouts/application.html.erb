<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>WhatsUp</title>
    <!-- Main css styles -->
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <!-- Main javascript files -->
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body class="<%= class_for 'body_navbar'%>">
    <!-- Wrapper-->
    <div id="wrapper">
      <!-- Navigation -->
      <%= render 'navigation' %>
      <!-- Page wraper -->
      <div id="page-wrapper" class="gray-bg">
        <!-- Page wrapper -->
        <%= render 'topnavbar' %>
        <div class="wrapper wrapper-content animated fadeInRight no-bottom-padding">
          <%= render 'notification' %>
          <!-- Main view  -->
          <%= yield %>
          <!-- Footer -->
          <!--
          < %= render 'footer' %>
          -->
        </div>
      </div>
      <!-- End page wrapper-->
      <!-- Right sidebar -->
      <%= render 'rightsidebar' %>
    </div>
  </body>
</html>
