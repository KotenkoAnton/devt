"use strict";
let whats_up;

let set_events = () => {
  $("#add_button").click(() => {
    whats_up.dom_elements_handler.open_action_box("add_object");
  });

  $("#ruler_button").click(() => {
    if (whats_up.mouse_event_handler.get_clickable_mode() == "ruler") {
      whats_up.mouse_event_handler.switch_clickable_mode_to("main_usage");
      $("#ruler_img").prop("src", "<%= asset_path('ruler.svg') %>");
    } else {
      whats_up.mouse_event_handler.switch_to("clickable");
      whats_up.mouse_event_handler.switch_clickable_mode_to("ruler");
      $("#ruler_img").prop("src", "<%= asset_path('active_ruler.svg') %>");
    }
  });

  // switch mode

  $("#switch_move_button").click(() => {
    whats_up.mouse_event_handler.toggle_mode();
  });

  //

  $("#delete_zone_button").click(() => {
    if ($("body").css("cursor") == "crosshair") {
      whats_up.mouse_event_handler.switch_to("clickable");
      whats_up.mouse_event_handler.switch_clickable_mode_to("main_usage");
      $("body").css({ cursor: "auto" });
    } else {
      whats_up.mouse_event_handler.switch_to("clickable");
      whats_up.mouse_event_handler.switch_clickable_mode_to("zone_deleting");
      $("body").css({ cursor: "crosshair" });
    }
  });

  // search

  $("#search_input").keyup(() => {
    let filter = $("#search_input")
      .val()
      .toLowerCase();
    let items = whats_up.drawer.get_items();
    if (filter.length == 0) {
      items.forEach(item => {
        item.text.style.fillColor = "black";
      });
      return;
    }
    items.forEach(item => {
      if (item.text.content.toLowerCase().includes(filter)) {
        item.text.style.fillColor = "red";
      } else {
        item.text.style.fillColor = "black";
      }
    });
  });

  //
};

let init = () => {
  whats_up = new WhatsUp("canvas");
  let map_name = $("#map_name").html();
  whats_up.load_map(map_name);

  set_events();
};

window.onload = () => init();
